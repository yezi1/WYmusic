/**
 * 搜索框
 */
.searchBox{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9;
}

.search{
  height: 46px;
  background-color: #eeeef3;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 15px;
}

.searchIcon{
  flex: 60rpx 0 0;
  height: 60rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top-left-radius: 26rpx;
  border-bottom-left-radius: 26rpx;
}

.searchIcon image{
  width: 75%;
  height: 75%;
}

.search input{
  background-color: white;
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

.cancel{
  flex: 80rpx 0 0;
  height: 60rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  border-top-right-radius: 26rpx;
  border-bottom-right-radius: 26rpx;
}

.cancel image{
  width: 45%;
  height: 55%;
}

/**
 * 搜索历史
 */
.history{
  width: 100%;
  background-color: #ffffff;
  position: absolute;
  z-index: 10;
  opacity: 0;
  display: none;
  padding-top: 80rpx;
}

.history_no{
  display: block;
  top: 46px;
  animation: bounTop .3s  ease both;
}

@keyframes bounTop{
  0% {
    top: 50px;
    opacity: 0;
  }
  100% {
    top: 46px;
    opacity: 1;
    
  }
}

.history_off{
  
  animation: bounTop2 .3s  ease both;
}

@keyframes bounTop2{
  0% {
    top: 46px;
    opacity: 1;
  }
  100% {
    top: 50px;
    opacity: 0;
    display: none;
  }
}

.singer{
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #dbdcde;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 46px;
  left: 0;
  z-index: 999;
  background-color: white;
}

.singerIcon{
  height: 43rpx;
  width: 43rpx;
}

.singerIcon>image{
  width: 100%;
  height: 100%;
}

.content{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.content>text{
  font-size: 30rpx;
}

.singerRarrow{
  width: 21rpx;
  height: 27rpx;
  margin-left: 8px;
}

.singerRarrow>image{
  width: 100%;
  height: 100%;
}

.songList{
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.listLeft{
  flex: 50rpx 0 0;
}

.listRight{
  flex: 1;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

/**
 * 轮播
 */
.classification{
  height: 40px;
  border-bottom: 1px solid #e0e0dd;
  display: flex;
  position: relative;
  background-color: #f9f9f9;
}

.classification text{
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}

.redLine{
  width: 20%;
  height: 3px;
  background-color: #d53c32;
  position: absolute;
  bottom: 0;
  transition: all .3s ease-in-out;
}

/**
 * 类别切换
 */
.slide-image{
  width: 100%;
  height: 300rpx;
}

.othersBox{
  height: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 10px 0;
  border-bottom: 1px solid #e0e3e5;
}

.othersList{
  flex: 1;
  height: 140rpx;
  margin: 0 auto;
  text-align: center;
}

.othersList>text{
  height: 50rpx;
  font-size: 30rpx;
}

.othersList:nth-child(3) .othersIcon>image{
  height: 45%;
}

.othersIcon{
  height: 90rpx;
  width: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #ba4f52;
  border-radius: 50%;
  margin: 0 auto;
  margin-bottom: 7rpx;
}

.othersIcon>image{
  height: 52%;
  width: 50%;
}

/**
 * 推荐歌单
 */
.hierarchyTitle{
  height: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.hierarchyLine{
  height: 36rpx;
  width: 10rpx;
  background-color: #d33a32;
}

.hierarchyList{
  overflow: hidden;
}

.hierarchyTitle>text{
  font-weight: 600;
  font-size: 32rpx;
  text-indent: 1em;
  margin-right: 5px;
}

.hierarchyTitle>image{
  height: 21px;
  width: 21px;
}

.hierarchycontent{
  float: left;
  width: 32.7%;
  height: 360rpx;
  margin-right: 6rpx;
  line-height: 20px;
}

.hierarchycontent>text{
  display: block;
  font-size: 30rpx;
}

.hierarchycontent:nth-of-type(3n){
   margin-right:0;
}

.hierarchyImg{
  width: 100%;
  height: 248rpx;
  background-position: 50% 50%;
  background-size: 100%;
  background-repeat: no-repeat;
  margin-bottom: 5px;
}

/**
 * 独家放送&&最新音乐
 */
.exclusive{
  overflow: hidden;
}

.exclusiveList{
  width: 49.5%;
  height: auto;
  float: left;
  line-height: 20px;
}

.exclusiveList>image{
  width: 100%;
  height: 106px;
}

.exclusiveList>text{
  display: block;
  height: 55px;
  font-size: 30rpx;
}

.exclusiveList:nth-child(1){
  margin-right: 1%;
}

.exclusiveList:nth-child(3){
  width: 100%;
}

.exclusiveList:nth-child(3) image{
  height: 300rpx;
}

.describe{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #8e908f;
  font-size: 12px;
}

/**
 * 推荐MV
 */
.mv{
  width: 49.5%;
  margin-right: 1%;
  float: left;
  display: flex;
  flex-direction: column;
  padding-bottom: 16rpx;
  line-height: 20px;
}

.mv:nth-child(2n){
  margin-right: 0;
}

.mv>image{
  width:100%;
  height:106px;
}

.mv>text{
  font-size: 30rpx;
}

/**
 * 精选专栏
 */ 
.handpick .hierarchyTitle{
  border-bottom: 1px solid #dbdcde;
}


