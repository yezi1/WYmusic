  color: #b04944;
  padding: 1px;
  margin-right: 5px;
  margin-left: -3px;
}

.rightBox{
  flex: 37% 0 0;
}

.rightBox>image{
  width: 100%;
  height: 100%;
}

.footer{
  padding-bottom: 150rpx;
}